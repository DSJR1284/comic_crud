<h1>Edit Your Story</h1>

 <form action="/comics/<%= @comics.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="title">Title:</label>
  <input type="text" name="title" value ="<%= @comics.title %>">
  <br>
  <br>
  <label for="blurb">Blurb:</label><br>
  <textarea name="blurb" style="width:auto; height:auto;"><%= @comics.blurb %></textarea>
  <br>
  <br>
  <br>
  <label for="image_url">Image URL:</label><br>
  <input type="text" name="image_url" value ="<%= @comics.image_url %>">
  <br>
  <br>
  <input type="submit" name="" value="EDIT STORY">
</form>
